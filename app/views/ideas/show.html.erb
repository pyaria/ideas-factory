<h1><%= @idea.title %></h1>
<p><%= @idea.body %></p>

<hr>

<h3>Leave a comment</h3>
<%= form_for [@idea, @comment] do |comment| %>
  <div class="form-group">
    <%= comment.label :body %>
    <%= comment.text_area :body, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= comment.submit %>
  </div>
<% end %>

<hr>

<h3>Comments</h3>
<% @comments.each do |comment| %>
  <div>
    <%= comment.user.first_name %>: <%= comment.body %>
  </div>
<% end %>
